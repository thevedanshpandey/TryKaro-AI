
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    // --- 1. User Profile ---
    // Document ID must match the logged-in User UID
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // --- 2. Subscriptions (Billing) ---
    // Document ID must match the logged-in User UID
    match /subscriptions/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // --- 3. Wardrobe Items (Wishlist & Analysis) ---
    // Checks that the document's 'user_id' field matches the authenticated user
    match /wardrobe_items/{itemId} {
      // Read: if does not exist (null) OR owned by user
      allow read: if isAuthenticated() && (resource == null || resource.data.user_id == request.auth.uid);
      
      // Create: new document must have user_id == auth.uid
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      
      // Update: existing doc must be owned AND new data must keep user_id == auth.uid
      allow update: if isAuthenticated() && resource.data.user_id == request.auth.uid && request.resource.data.user_id == request.auth.uid;
      
      // Delete: existing doc must be owned
      allow delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }

    // --- 4. Outfits ---
    match /outfits/{outfitId} {
      allow read: if isAuthenticated() && (resource == null || resource.data.user_id == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.user_id == request.auth.uid && request.resource.data.user_id == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }

    // --- 5. Wardrobe Analyses ---
    match /wardrobe_analyses/{analysisId} {
      allow read: if isAuthenticated() && (resource == null || resource.data.user_id == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.user_id == request.auth.uid && request.resource.data.user_id == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }
  }
}
